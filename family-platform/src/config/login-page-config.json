{
  "page": {
    "title": "登录页面",
    "meta": {
      "description": "Family Web 家庭网站交互平台登录页面",
      "keywords": "家庭网站,登录,Family Web"
    },
    "layout": {
      "type": "centered",
      "maxWidth": "400px",
      "minHeight": "100vh",
      "padding": {
        "mobile": "16px",
        "desktop": "32px"
      }
    },
    "background": {
      "type": "gradient",
      "colors": ["#fff7ed", "#ffedd5", "#fed7aa"],
      "direction": "135deg",
      "fallback": "#fff7ed"
    }
  },
  "container": {
    "style": {
      "background": "rgba(255, 255, 255, 0.9)",
      "backdropFilter": "blur(10px)",
      "borderRadius": "24px",
      "border": "1px solid rgba(255, 255, 255, 0.2)",
      "boxShadow": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
      "padding": "32px"
    },
    "animation": {
      "entrance": {
        "type": "fadeInUp",
        "duration": "0.6s",
        "delay": "0.1s"
      }
    }
  },
  "header": {
    "logo": {
      "type": "icon",
      "icon": "home",
      "background": {
        "type": "gradient",
        "colors": ["#f97316", "#ea580c"],
        "direction": "45deg"
      },
      "size": "48px",
      "borderRadius": "16px",
      "color": "#ffffff",
      "shadow": "0 10px 25px rgba(249, 115, 22, 0.3)"
    },
    "title": {
      "text": "欢迎回来",
      "fontSize": "28px",
      "fontWeight": "700",
      "color": "#1f2937",
      "marginTop": "24px",
      "textAlign": "center"
    },
    "subtitle": {
      "text": "登录您的 Family Web 账户",
      "fontSize": "14px",
      "fontWeight": "400",
      "color": "#6b7280",
      "marginTop": "8px",
      "textAlign": "center"
    }
  },
  "form": {
    "spacing": "24px",
    "marginTop": "32px",
    "fields": [
      {
        "id": "email",
        "type": "email",
        "label": "邮箱地址",
        "placeholder": "请输入您的邮箱",
        "required": true,
        "icon": "envelope",
        "validation": {
          "type": "email",
          "message": "请输入有效的邮箱地址"
        },
        "style": {
          "height": "48px",
          "borderRadius": "12px",
          "border": "1px solid #e5e7eb",
          "background": "rgba(249, 250, 251, 0.5)",
          "paddingLeft": "44px",
          "paddingRight": "16px",
          "fontSize": "14px",
          "color": "#1f2937",
          "focusBorder": "#f97316",
          "focusRing": "0 0 0 3px rgba(249, 115, 22, 0.1)"
        }
      },
      {
        "id": "password",
        "type": "password",
        "label": "密码",
        "placeholder": "请输入您的密码",
        "required": true,
        "icon": "lock",
        "showToggle": true,
        "validation": {
          "minLength": 6,
          "message": "密码至少6位字符"
        },
        "style": {
          "height": "48px",
          "borderRadius": "12px",
          "border": "1px solid #e5e7eb",
          "background": "rgba(249, 250, 251, 0.5)",
          "paddingLeft": "44px",
          "paddingRight": "44px",
          "fontSize": "14px",
          "color": "#1f2937",
          "focusBorder": "#f97316",
          "focusRing": "0 0 0 3px rgba(249, 115, 22, 0.1)"
        }
      }
    ]
  },
  "options": {
    "rememberMe": {
      "enabled": true,
      "label": "记住我",
      "defaultChecked": false,
      "position": "left"
    },
    "forgotPassword": {
      "enabled": true,
      "text": "忘记密码？",
      "link": "/forgot-password",
      "position": "right",
      "style": {
        "color": "#f97316",
        "fontSize": "14px",
        "fontWeight": "500"
      }
    }
  },
  "buttons": {
    "primary": {
      "text": "登录账户",
      "type": "submit",
      "style": {
        "width": "100%",
        "height": "48px",
        "borderRadius": "12px",
        "background": "linear-gradient(45deg, #f97316, #ea580c)",
        "color": "#ffffff",
        "fontSize": "14px",
        "fontWeight": "600",
        "border": "none",
        "boxShadow": "0 10px 25px rgba(249, 115, 22, 0.25)",
        "cursor": "pointer",
        "transition": "all 0.2s ease",
        "hover": {
          "background": "linear-gradient(45deg, #ea580c, #c2410c)",
          "transform": "translateY(-1px)",
          "boxShadow": "0 15px 35px rgba(249, 115, 22, 0.35)"
        }
      },
      "loading": {
        "enabled": true,
        "text": "登录中...",
        "spinner": true
      }
    }
  },
  "divider": {
    "enabled": true,
    "text": "或者",
    "style": {
      "marginTop": "24px",
      "marginBottom": "24px",
      "color": "#9ca3af",
      "fontSize": "12px"
    }
  },
  "socialLogin": {
    "enabled": true,
    "providers": [
      {
        "id": "google",
        "name": "Google",
        "icon": "google",
        "style": {
          "width": "48%",
          "height": "40px",
          "borderRadius": "12px",
          "border": "1px solid #e5e7eb",
          "background": "#ffffff",
          "color": "#374151",
          "fontSize": "14px",
          "fontWeight": "500",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "center",
          "gap": "8px",
          "hover": {
            "background": "#f9fafb"
          }
        }
      },
      {
        "id": "wechat",
        "name": "微信",
        "icon": "wechat",
        "style": {
          "width": "48%",
          "height": "40px",
          "borderRadius": "12px",
          "border": "1px solid #e5e7eb",
          "background": "#ffffff",
          "color": "#374151",
          "fontSize": "14px",
          "fontWeight": "500",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "center",
          "gap": "8px",
          "hover": {
            "background": "#f9fafb"
          }
        }
      }
    ]
  },
  "footer": {
    "register": {
      "enabled": true,
      "text": "还没有账户？",
      "linkText": "立即注册",
      "link": "/register",
      "style": {
        "textAlign": "center",
        "marginTop": "24px",
        "fontSize": "14px",
        "color": "#6b7280"
      },
      "linkStyle": {
        "color": "#f97316",
        "fontWeight": "500",
        "textDecoration": "none"
      }
    },
    "terms": {
      "enabled": true,
      "text": "登录即表示您同意我们的",
      "links": [
        {
          "text": "服务条款",
          "url": "/terms"
        },
        {
          "text": "隐私政策",
          "url": "/privacy"
        }
      ],
      "style": {
        "textAlign": "center",
        "marginTop": "16px",
        "fontSize": "12px",
        "color": "#9ca3af"
      }
    }
  },
  "navigation": {
    "backToHome": {
      "enabled": true,
      "text": "返回首页",
      "link": "/",
      "icon": "home",
      "position": "top-left",
      "style": {
        "position": "absolute",
        "top": "32px",
        "left": "32px",
        "color": "#6b7280",
        "fontSize": "14px",
        "fontWeight": "500",
        "display": "flex",
        "alignItems": "center",
        "gap": "8px",
        "textDecoration": "none",
        "hover": {
          "color": "#f97316"
        }
      }
    }
  },
  "responsive": {
    "breakpoints": {
      "mobile": "640px",
      "tablet": "768px",
      "desktop": "1024px"
    },
    "mobile": {
      "container": {
        "padding": "24px",
        "borderRadius": "16px"
      },
      "navigation": {
        "backToHome": {
          "text": "",
          "showIconOnly": true
        }
      }
    }
  },
  "animations": {
    "pageEnter": {
      "type": "fadeIn",
      "duration": "0.5s"
    },
    "formFieldFocus": {
      "type": "scale",
      "scale": "1.02",
      "duration": "0.2s"
    },
    "buttonHover": {
      "type": "lift",
      "translateY": "-2px",
      "duration": "0.2s"
    }
  },
  "accessibility": {
    "focusVisible": true,
    "highContrast": false,
    "fontSize": {
      "scalable": true,
      "min": "12px",
      "max": "18px"
    },
    "screenReader": {
      "enabled": true,
      "labels": {
        "form": "登录表单",
        "emailField": "邮箱地址输入框",
        "passwordField": "密码输入框",
        "submitButton": "提交登录表单",
        "togglePassword": "显示或隐藏密码"
      }
    }
  }
} 